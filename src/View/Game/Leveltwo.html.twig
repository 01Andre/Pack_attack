{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/leveltwocss.css">
{% endblock %}

{% block page %}
    <audio src="/assets/musiques/leveltwo.mp3" autoplay loop></audio>
    {% include 'Game/_modal.html.twig' %}
    <div class="container-fluid">

        <button type="button" class="btn btn-danger offset-11"> EGGS</button>
        <div class="row">
            {% for item in items %}
                <div class="col-1">

                    <a data-target="#modal{{ loop.index }}" data-toggle="modal">
                        <img src="{{ random(['/assets/images/eggs_001.png', '/assets/images/eggs_002.png', '/assets/images/eggs_003.png','/assets/images/eggs_004.png',
                            '/assets/images/eggs_005.png','/assets/images/eggs_007.png','/assets/images/eggs_008.png','/assets/images/eggs_009.png',
                            '/assets/images/eggs_010.png']) }}">
                    </a>
                </div>
            {%  endfor %}
            <div id ="compteur"> blablabla</div>
        </div>
    </div>
    <script>
        var compteur = 30;
        decompte();

        function decompte() {
            compteur -= 1;
            document.getElementById('compteur').innerHTML = compteur;

            if (compteur < 2) {
                document.location.href = "../../Game/GameOver";
            }
            setTimeout(decompte, 1000);
        }
    </script>
{% endblock %}
